<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ershi.chat.mapper.MessageMapper">
    <resultMap id="BaseResultMap" type="com.ershi.chat.domain.message.MessageEntity">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="room_id" jdbcType="BIGINT" property="roomId"/>
        <result column="sender_id" jdbcType="BIGINT" property="senderId"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="extra" typeHandler="com.mybatisflex.core.handler.Fastjson2TypeHandler" property="extra"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="is_delete" jdbcType="TINYINT" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        `id`, `room_id`, `sender_id`, `type`, `extra`, `create_time`, `update_time`, `is_delete`
    </sql>

    <select id="countUnreadMsg" resultType="com.ershi.chat.domain.dto.C10nUnreadCount">
        <foreach collection="unReadMsgCountReqs" item="req" separator="UNION ALL">
            SELECT
            #{req.roomId} AS roomId,
            COUNT(*) AS unreadCount
            FROM message
            WHERE room_id = #{req.roomId}
            <if test="req.readMsgId != null">
                AND id > #{req.readMsgId}
            </if>
            <![CDATA[ AND id <= #{req.lastMsgId} ]]>
        </foreach>
    </select>
</mapper>